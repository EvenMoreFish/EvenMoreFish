{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":disableRateLimiting"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "io.papermc.paper:paper-api"
      ],
      "allowedVersions": "1.20.1-R0.1-SNAPSHOT"
    },
    {
      "allowedVersions": "7.0.9",
      "matchPackageNames": [
        "com.sk89q.worldguard{/,}**"
      ]
    },
    {
      "allowedVersions": "7.3.0",
      "matchPackageNames": [
        "com.sk89q.worldedit{/,}**"
      ]
    },
    {
      "allowedVersions": "7.7.3",
      "matchPackageNames": [
        "br.net.fabiozumbi12.RedProtect{/,}**"
      ]
    },
    {
      "groupName": "WorldGuard",
      "matchPackageNames": [
        "com.sk89q.worldguard{/,}**"
      ]
    },
    {
      "groupName": "WorldEdit",
      "matchPackageNames": [
        "com.sk89q.worldedit{/,}**"
      ]
    },
    {
      "groupName": "Flyway",
      "matchPackageNames": [
        "org.flywaydb:{/,}**"
      ]
    },
    {
      "groupName": "jOOQ",
      "matchPackageNames": [
        "org.jooq:{/,}**"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": "non-major updates",
      "schedule": [
        "before 5am on monday"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major updates",
      "dependencyDashboardApproval": true
    }
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "dependencyDashboard": true,
  "ignoreDeps": [
    "org.gradle.toolchains.foojay-resolver-convention"
  ]
}
